<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/Layout1"
    android:background="@color/design_default_color_on_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity">

    <TextView
        android:id="@+id/tv_filedemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Attention Level Monitor System..."
        android:textColor="#FF0000"
        android:textSize="35sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView

        android:textSize="30sp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/tv_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="For Demo Analysis Click on the Below button" />

    <Button
        android:textSize="22sp"
        android:textColor="#000000"
        android:id="@+id/btn_filedemo"
        android:background="@drawable/rounded_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Demo" />



    <TextView
        android:textSize="30sp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/tv_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Connect the headset to monitor the Actual Data" />

    <Button
        android:id="@+id/btn_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/rounded_corners"
        android:text="Connect"
        android:textColor="#000000"
        android:textSize="22sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffff"
        app:menu="@menu/menu_bottom"/>


</LinearLayout>
